}

grad{
	id: (ID)
	t: (triplet)
	tx: (double)
	ty: (double)
	tz: (double)

	rot: (triplet)
	dirx: (double)
	diry: (double)
	dirz: (double)

	c1 / color1: (ID) | (HEX6)
	c2 / color2: (ID) | (HEX6)
}

sphere / cylinder / cone / plane / pyramid / torus / cuboid{
	tx: (double)
	ty: (double)
	tz: (double)

	dirx: (double)
	diry: (double)
	dirz: (double)

	id: (ID)
	clip : (ID)
	scale : (double)

	mat: (PATH.mat)
	spec: (coef)
	reflexion: (coef)
