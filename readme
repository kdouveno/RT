________________________________________________________________________________
                             [TYPE DEFINITIONS]
________________________________________________________________________________
ID:
	(int)
triplet:
	[(double) | '~'], [(double) | '~'], [(double) | '~']
loc:
	[(tripet) | (ID)]
HEX6:
	A 6 Bytes hex number preceded by '#'; ex: "#0A5E3F", "#Aa5bF7"
FILE.ext:
	A path to file with 'ext' extension
coef:
	a float which value should stay between 0 and 1
bool:
	[0 | 1]
________________________________________________________________________________
                                [PROPERTIES]
________________________________________________________________________________
scene{
	lights: auto
	amb_l: (HEX6)
}

camera{
	pos: (triplet)
	t: (triplet)
	tx: (double)
	ty: (double)
	tz: (double)

	rot: (triplet)
	dirx: (double)
	diry: (double)
	dirz: (double)

	dimx: (int)
	dimy: (int)

	filter: black | sepia

	id: (ID)
	fov: (double)
	ssaa: [1 | 2 | 4 | 8 | 16]
	aaa: (bool)
	para: (bool)
}

light{
	pos: (triplet)
	t: (triplet)
	tx: (double)
	ty: (double)
	tz: (double)

	rot: (triplet)
	dirx: (double)
	diry: (double)
	dirz: (double)

	power: (double)
	radius: (double)
	c / color : (ID) | (HEX6)
}

grad{
	id: (ID)
	t: (triplet)
	tx: (double)
	ty: (double)
	tz: (double)

	rot: (triplet)
	dirx: (double)
	diry: (double)
	dirz: (double)

	c1 / color1: (ID) | (HEX6)
	c2 / color2: (ID) | (HEX6)
}

sphere / cylinder / cone / plane / cuboid{

	pos: (triplet)
	t: (triplet)
	tx: (double)
	ty: (double)
	tz: (double)

	dirx: (double)
	diry: (double)
	dirz: (double)

	id: (ID)
	clip : (ID)
	scale : (double)

	mat: (PATH.mat)
	spec: (coef)
	diff: (coef)
	reflexion: (coef)
	n / refraction_index : (coef)
	tr / transparency : (coef)
	c / color: [(ID) | (HEX6)]

	b_lvl / bump_level : (float)
	txt / texture: [(FILE.rt) | none]
	txt_bm / texture_bump: [(FILE.rt) | none]
	offx: (float)(%)
	offy: (float)(%)

	v / v1: (double)
	v2: (double)
	v3: (double)
	v4: (double)
}

